container_commands:
    01-no_dev:
        cwd: "/var/app/staging"
        command: "/usr/bin/composer.phar install --optimize-autoloader"
    02-config_clear:
        cwd: "/var/app/staging"
        command: "php artisan config:clear"
    03-view_clear:
        cwd: "/var/app/staging"
        command: "php artisan view:clear"
    04-route_cache:
        cwd: "/var/app/staging"
        command: "php artisan route:cache"
    05-view_cache:
        cwd: "/var/app/staging"
        command: "php artisan view:cache"
    06-chmod_storage:
        cwd: "/var/app/staging"
        command: "chmod 775 storage -R"
    07-chmod_bootstrap:
        cwd: "/var/app/staging"
        command: "chmod 775 bootstrap -R"
    09-link:
        command: "ln -s ../storage/app/public public/storage"
    11-npm:
        cwd: "/var/app/staging"
        command: "npm install"
    12-npm_dependencies:
        cwd: "/var/app/staging"
        command: "npm run build"
files:
    /opt/elasticbeanstalk/tasks/taillogs.d/laravel-logs.conf:
        content: /var/app/current/storage/logs/laravel.log
        group: root
        mode: "000755"
        owner: root
